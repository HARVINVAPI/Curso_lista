<div class="block_curso_lista-info-element">
    {{#courses}}
    <article class="course-block" 
             data-course-id="{{courseid}}" 
             role="article" 
             aria-labelledby="course-name-{{courseid}}">
        
        <!-- Grid Item 1: Imagen del curso -->
        <div class="course-image">
            <img src="{{{courseimage}}}" 
                 alt="{{courseimage_alt}}: {{fullname}}" 
                 loading="lazy"
                 width="80"
                 height="80"
                 onerror="this.src='/blocks/curso_lista/pix/defaultcourseimage.png'">
        </div>
        
        <!-- Grid Item 2: Nombre del curso -->
        <div class="course-name">
            <h3 id="course-name-{{courseid}}">{{fullname}}</h3>
        </div>
        
        <!-- Grid Item 3: Progreso renderizado desde PHP -->
        {{{progress_circle_html}}}
        
        <!-- Grid Item 4: Botón de acción -->
        <div class="course-action">
            <a href="{{courseurl}}" 
               class="btn-course" 
               aria-label="Ir al curso: {{fullname}}"
               role="button">
                <span>Ir al curso</span>
            </a>
        </div>
    </article>
    {{/courses}}
    
    {{^courses}}
    <div class="no-courses-message" role="alert">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-bottom: 0.75rem; opacity: 0.5;">
            <path d="M19 3H5C3.9 3 3 3.9 3 5V19C3 20.1 3.9 21 5 21H19C20.1 21 21 20.1 21 19V5C21 3.9 20.1 3 19 3ZM19 19H5V5H19V19Z" fill="currentColor"/>
            <path d="M7.5 13.5L9 15L11 13L15 17H5L7.5 13.5Z" fill="currentColor" opacity="0.6"/>
            <circle cx="9.5" cy="8.5" r="1.5" fill="currentColor" opacity="0.6"/>
        </svg>
        <p>No tienes cursos disponibles</p>
        <small>Los cursos aparecerán aquí cuando te inscribas</small>
    </div>
    {{/courses}}
</div>